<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_primary"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/guillotine_toolbar"
            style="@style/Toolbar"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/guillotine_hamburger"
                style="@style/ImageView.Hamburger"
                android:paddingTop="4dp"
                android:src="@drawable/hamburger_icon" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
                    android:id="@+id/title_guillotine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:textSize="35sp" />

                <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
                    android:id="@+id/pro_badge_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/title_guillotine"
                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:text="@string/pro_caps"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/explore_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/explore_icon_new"
            android:tint="#fff" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/explore_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_explore_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_picks_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/collections_icon" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/top_picks_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_top_picks_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categories_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:padding="1dp"
            android:src="@drawable/categories_icon" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/categories_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_categories_title" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/minimal_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:padding="1dp"
            android:src="@drawable/ic_pie_chart_24" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/minimal_textview"
            style="@style/TextView.GuillotineItem"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/guillotine_minimal_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collection_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_centerHorizontal="true">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/gallery_icon" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/collection_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_collection_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_account_us_48"
            android:tint="@color/color_white" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/feedback_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_feedback_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_pro_group"
        style="@style/LinearLayout.GuillotineItem"
        android:background="@color/color_white">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_crown_48" />

        <zebrostudio.wallr100.utils.canarotextviewutils.CanaroTextView
            android:id="@+id/buy_pro_textview"
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_buy_pro_title"
            android:textColor="@color/color_black" />
    </LinearLayout>
</LinearLayout>