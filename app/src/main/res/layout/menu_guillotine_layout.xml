<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootLinearLayoutGuillotineMenu"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/guillotine_menu_background"
  android:clickable="true"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/guillotine_medium_margin">

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbarGuillotineMenu"
      style="@style/ToolbarTheme"
      app:contentInsetStart="@dimen/toolbar_contentinset_start">

      <ImageView
        android:id="@+id/hamburgerGuillotineMenu"
        style="@style/HamburgerImageButtonTheme"
        android:paddingTop="@dimen/guillotine_hamburger_padding_top"
        android:src="@drawable/ic_hamburger_horizontal" />

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.zebrostudio.wallrcustoms.customtextview.WallrCustomTextView
          android:id="@+id/appTitleGuillotineMenu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/app_name"
          android:textSize="@dimen/guillotine_menu_apptitle_size" />

        <com.zebrostudio.wallrcustoms.customtextview.WallrCustomTextView
          android:id="@+id/proBadgeGuillotineMenu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/appTitleGuillotineMenu"
          android:paddingLeft="@dimen/guillotine_menu_probadge_padding_left"
          android:paddingTop="@dimen/guillotine_menu_probadge_padding_top"
          android:text="@string/guillotine_pro_badge"
          android:textSize="@dimen/guillotine_menu_probadge_size" />

      </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

  </RelativeLayout>

</LinearLayout>
